<h1>Create a new post</h1>

<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :category_id %>
    <%= f.select(:category_id) do %>
      <% @categories.each do |c| %>
        <%= content_tag(:option, c.name, value: c.id) %>
      <% end %>
    <% end %>
  </p> 

  <p>
    <%= f.submit %>
  </p>
<% end %>
